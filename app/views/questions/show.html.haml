.card
  .card-header
    %p.card-title
      = @question.title
  .card-body
    %p.card-text
      = @question.body
    = link_to "Edit", edit_question_path(@question), class: 'btn btn-sm btn-warning'
    = link_to "Delete", question_path(@question), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'
    %ul.list-group.list-group-flush
      %li.list-group-item
  .card-footer
    = link_to "Back", questions_path, class: 'btn btn-sm btn-secondary'

