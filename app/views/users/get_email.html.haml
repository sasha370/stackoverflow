.row
  .col-6.mx-auto
    .card
      .card-header
        %h1= t('.sign_up')
      .card-body
        = form_for(@user, url: set_email_path) do |f|
          .form-group
            = f.label :email
            = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control'
          .form-group.text-center
            = f.submit 'Send confirmation to email', class: 'btn btn-primary'
