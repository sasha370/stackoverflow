.card
  .card-header
    .card-title.text-center
      %h1 Search result
  .card-body
    %ul
    - @results.each do |item|
      .row
        .col-9
          %li
            - if @search[:options] == 'All' ||  @search[:options] == 'Question'
              = link_to item.title.truncate(100), question_path(item)

            - elsif @search[:options] == 'Answer'
              = link_to item.body.truncate(100), "/questions/#{item.question.id}?#answer_#{item.id}"

            - elsif @search[:options] == 'Comment' && item.commentable_type == "Question"
              = link_to item.body.truncate(100), "/questions/#{item.commentable_id}?#comment_#{item.id}"

            - elsif @search[:options] == 'Comment' && item.commentable_type == "Answer"
              = link_to item.body.truncate(100), "/questions/#{item.commentable.question_id}?#comment_#{item.id}"

            - else @search[:options] == 'User'
              -# = link_to item.email, item

        .col-3.small.border-left
          = item.user.email
          ask
          = time_ago_in_words(item.created_at)
          ago
